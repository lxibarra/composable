    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "es6-promise": "^4.1.1",
    "fetch-mock": "^5.12.2",
    "isomorphic-fetch": "^2.2.1",
